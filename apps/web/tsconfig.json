{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "target": "es2017",
    "lib": ["dom", "es2017"],
    "plugins": [{ "name": "next" }],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "next.config.js",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
